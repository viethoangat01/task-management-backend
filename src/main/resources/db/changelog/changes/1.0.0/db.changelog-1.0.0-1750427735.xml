<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

  <changeSet id="1750427735_01" author="diepnq46">
    <createTable tableName="comments">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false" />
      </column>
      <column name="task_id" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="user_id" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="content" type="TEXT" />
      <column name="created_at" type="TIMESTAMP"/>
    </createTable>

    <addForeignKeyConstraint baseTableName="comments" baseColumnNames="task_id" constraintName="fk_comments_tasks"
      referencedTableName="tasks" referencedColumnNames="id"/>
    <addForeignKeyConstraint baseTableName="comments" baseColumnNames="task_id" constraintName="fk_comments_users"
      referencedTableName="users" referencedColumnNames="id"/>
  </changeSet>
</databaseChangeLog>